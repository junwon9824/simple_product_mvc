<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.example.demo.model.mapper.DestinationMapper">

	<resultMap id="destinationResultMap"
		type="com.example.demo.model.Destination">
		<id property="id" column="id" />
		<result property="name" column="name" />
		<result property="description" column="description" />
		<result property="region" column="region" />
		<result property="price" column="price" />

		<!-- 추가적인 매핑 -->
		<!-- ... -->
	</resultMap>

	<select id="getAllDestinations" resultMap="destinationResultMap">
		SELECT * FROM
		destinations
	</select>

	<select id="getDestinationById" parameterType="int"
		resultMap="destinationResultMap">
		SELECT * FROM destinations WHERE id = #{id}
	</select>

	<insert id="createDestination"
		parameterType="com.example.demo.model.Destination">
		INSERT INTO destinations (name, description) VALUES
		(#{name},
		#{description})
	</insert>


	<!-- 추가적인 SQL 매핑 -->
	<!-- ... -->
</mapper>
